{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    // "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "src/@types/**/*",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": ["./public/", "./node_modules"]
}
